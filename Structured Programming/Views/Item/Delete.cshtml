@model Structured_Programming.Models.Item

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body-content">
    <div class="container">
        <div class="row">
            <div class="divider1"></div>
            <div class="span12-no-margin">
                <div class="head-style1">
                    <h2>Delete Item</h2>
                </div>
                <div class="span12">
                    <h3>Are you sure to permanently delete this item? This action <strong>cannot</strong> be undo </h3>
                </div>
                <div class="span12">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class ="contact_form" }))
                    {
                        <p>
                            @Html.HiddenFor(m => m.ItemId)
                            <input type="submit" value="Delete" class="btn send-btn"/>
                            @Html.ActionLink("Edit item", "edit", new { @id = Model.ItemId }, new { @class = "btn send-btn" }) 
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn send-btn" })
                        </p>
                    }
                </div>
            </div>
            <div class="span7">
                <div class="head-style1" style="margin-left:-20px;">
                    <h2>@Model.Name</h2>
                </div>
                @Helpers.ImageFor(Model.ItemId, "400px", "300px")
            </div>

            <div class="span5">
                <div class="head-style1 " style="margin-left:-20px;">
                    <h2>Product Description</h2>
                </div>
                <h3>@Model.Description</h3>
                <br>
                <div class="head-style1 " style="margin-left:-20px;">
                    <h3>Rate: 3/5</h3>
                    <p>
                        <img src="../../images/star.png"><img src="../../images/star.png"><img src="../../images/star.png">
                    </p>
                </div>
                <ul class="port-details" style="margin-left:-5px;">
                    <li><strong>Owner:</strong> @Html.ActionLink(@Model.UserProfile.UserName, "Details", "Account", new {@id = @Model.UserProfile.UserId}, null)</li>
                    <li><strong>Price:</strong> @Model.Price</li>
                    <li><strong>Category:</strong> @Model.Type.Name</li>
                    <li><strong>Want to trade with:</strong> @Model.Trade</li>
                </ul>
                <div class="clearfix">&nbsp;</div>
            </div>
        </div>
    </div>
</div>
<!-- Body Content End -->
