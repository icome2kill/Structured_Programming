@model Structured_Programming.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Body Content Start -->
<div class="body-content">
    <div class="container">
        <div class="span8-no-margin">
            <div class="head-style1">
                <h2>Create your account</h2>
            </div>
            <div class="show-grid row">
                @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, htmlAttributes: new { @class = "contact_form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="span8 error-msg">
                        @Html.ValidationSummary(true)
                        @Html.ValidationMessage("Error")
                    </div>
                    <div class="span12">
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, new { @class = "span6", id = "username" })
                        <div class="span12-no-margin error-msg">
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="span12">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "span6", id = "password" })
                        <div class="span12-no-margin error-msg">
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="span12">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span6", id = "confirm_password" })
                        <div class="span12-no-margin error-msg">
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                    <div class="span12">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "span6" })
                        <div class="span12-no-margin error-msg">
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                    <div class="span12">
                        <input type="submit" value="Sign up" class="btn send-btn">
                        &nbsp
                        <input id="clear-btn" type="reset" value="Clear form" class="btn send-btn">
                    </div>
                }               
                <div class="clearfix"></div>
            </div>            
        </div>

        <div class="span4-no-margin">
            <div class="head-style1">
                <h2>Already have account ?</h2>
            </div>
            <div id="contact_form">
                <div class="span4" style="margin-top:15px;">
                    @Html.ActionLink("SIGN IN NOW", "login", null, new { @class = "btn send-btn" })
                </div>   
            </div> 
        </div>                        
    </div>
</div>